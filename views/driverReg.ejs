<!DOCTYPE html>
<html lang="en">
<%- include ('./partials/head.ejs') %>

<body id="body-driverReg">
    <div class="col-md-4 col-md-offset-4 mx-auto" id="driver-reg">
		<div>
			<h3>Register Now</h3>
		</div>
		<div class="form-group">
			<form id="form1" action="/newDriver" onsubmit="return validateForm()" method="POST">
				<input type="number" name="idNo" placeholder="ID Number" required="true" class="form-control"><br/>
				<input type="email" name="email" placeholder="E-mail" required="true" class="form-control"><br/>
				<input type="text" name="firstName" placeholder="First Name" required="true" class="form-control"><br/>
				<input type="text" name="secondName" placeholder="Second Name" required="true" class="form-control"><br/>
				<input type="password" name="password" placeholder="Password" required="true" class="form-control"><br/>
				<input type="password" name="passwordConfirm" placeholder="Confirm Password" required="true" class="form-control"><br/>
				<input type="submit" value="Register" class="btn btn-success">
			</form>
		</div>
		
		<div class="mssg bg-danger">
			<p id="check"></p>
		</div>
		<div>
			<span>Already Registered! <a href="/driverLogin">Login</a></span>
		</div>
		<div id="LangTable"><a href="/login" id="aa"></a>
		</div>
	</div>

	<div class="fixed-bottom">
		<%- include ('./partials/footer.ejs') %>
	</div>
	

	<script>
		function validateForm(){
			const x = document.forms["form1"]["password"].value;
			const y = document.forms["form1"]["passwordConfirm"].value;
			if (x !== y) {
				alert("Confim password must match password");
				return false;
			}
		}
	</script>
</body>
</html>