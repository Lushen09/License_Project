<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="/styles.css">
    <title>LPL | <%=title%></title>
</head>
<body>
    <div class="col-md-4 col-md-offset-4">
			<p>Update Application</p>
	</div>

    <div>
        <div class="container-md">
            <% if (applications.length > 0) {%>
                <% applications.forEach(function(application) {%>
                    <h3>Date Submited:</h3>
                    <p><%=application.createdAt%></p>
                    <br>
                    <h3>ID Number:</h3>
                    <p><%=application.idNo%></p>
                    <br>
                    <h3>Applicant Name:</h3>
                    <p><%=application.name%></p>
                    <br>
                    <h3>License Code:</h3>
                    <p><%=application.code%></p>
                    <br>
                    <h3>License Number:</h3>
                    <p><%=application.licenseNo%></p>
                    <br>
                    <h3>Applicant Contact Number:</h3>
                    <p><%=application.contactNo%></p>
                    <br>
                    <h3>Applicant Delivery Address:</h3>
                    <p><%=application.deliveryAddress%></p>
                <% }) %>
            <% } else { %>
                <p>Nothing to display...</p>
            <% } %>
        </div>
    </div>

    <form action="/adminUpdate" method="POST" >
        <div style="display:none">
            <% if (applications.length > 0) {%>
                <% applications.forEach(function(application) {%>
                    <input type="text" readonly name="id" class="form-control-plaintext" value="<%=application._id%>">
            <% }) %>
            <% } else { %>
                 <p>Nothing to display...</p>
            <% } %>
        </div>
        <div class="form-group">
            <label for="exampleFormControlSelect1">Status</label>
            <select class="form-control" id="exampleFormControlSelect1" name="status" required>
              <option>Pending</option>
              <option>Approved</option>
              <option>Declined</option>
            </select>
          </div>
        <div class="form-group">
          <label for="exampleFormControlInput1">Comments</label>
          <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="comments" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</body>
</html>